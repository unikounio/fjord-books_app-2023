<div>
  <% if model.comments.count > 0 %>
    <p><%= t('.count') %>：<%= model.comments.count %></p>
    <% model.comments.each do |comment| %>
      <%= comment.created_at.strftime("%Y年%m月%d日(#{t('date.abbr_day_names')[comment.created_at.wday]}) %H:%M") %> 
      <% unless comment.user.name.empty? %>
        <%= comment.user.name %>
      <% else %>
        <%= comment.user.email  %>
      <% end %>
      : <%= comment.comment %>
      <% if comment.user == current_user %>
        <%= button_to t('.delete'), polymorphic_path([model, comment]), method: :delete %><br>
      <% end %>
    <% end %>
  <% else %>
    <p><%= t('.nothing') %>
  <% end %>
</div>

<div class="field">
  <%= form_with model: [model, @comment] do |f| %>
    <%= f.text_area :comment, placeholder: t('.here'), required: true %>
    <%= f.submit %>
  <% end %>
</div>
